# Database
# For local development: localhost
# For Docker: postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=portfolio_admin
DB_PASSWORD=portfolio_admin_dev_pass
DB_NAME=portfolio

# Redis
# For local development: localhost
# For Docker: redis
REDIS_HOST=localhost
REDIS_PORT=6379
# Redis password (optional - leave empty for no authentication)
# IMPORTANT: Use strong passwords in production
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Server
PORT=8084
ENVIRONMENT=development

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_SOURCE=false
